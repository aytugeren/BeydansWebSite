<!-- CONTACT SECTION -->
<section id="contact" class="parallax-section">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <!-- SECTION TITLE -->
                <div class="wow fadeInUp section-title" data-wow-delay="0.2s">
                    <h2>Bizimle İletişime Geçin.</h2>
                    <p>Etkinler hakkında bilgi almak için veya özel ders hakkında bilgi almak için formu doldurmanız yeterli. Biz size ulaşırız...</p>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <!-- CONTACT FORM HERE -->
                <div class="wow fadeInUp" data-wow-delay="0.6s">
                    @using (Html.BeginForm("HomeContact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form action="#" method="post" id="contact-form">
                            <div class="col-md-6 col-sm-6">
                                <input type="text" class="form-control" name="CustomerName" placeholder="Adnız Soyadınız">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <input type="email" class="form-control" name="CustomerEmail" placeholder="Mail Adresiniz">
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <textarea class="form-control" rows="5" name="CustomerMessage" placeholder="Mesajınız"></textarea>
                            </div>
                            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                                <button id="submit" type="submit" class="form-control" value="send-mail" name="submit">Mesajı Gönder</button>
                            </div>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</section>
