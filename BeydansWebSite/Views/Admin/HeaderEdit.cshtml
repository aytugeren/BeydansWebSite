@model BeydansWebSite.Models.HeaderModel
@{
    ViewBag.Title = "AboutPage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
</head>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Anasayfa Yazı Değiştirme</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Yazı Başlığı</th>
                    <th>Yeri</th>
                    <th>İçeriği</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1.</td>
                    <td>@Model.Header</td>
                    <td>AnaSayfa Resim veya Video Üzeri</td>
                    <td>@Model.HeaderOfTitle</td>
                    <td><span class="btn btn-success" onclick="openEditModal(@Model.HeaderOfTitle)" data-toggle="modal" data-target="#EditModal">Düzenle</span></td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<script>
    function openEditModal(title) {
        $('#summernote').summernote('code', title);
    }
</script>

<div class="modal fade" id="EditModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Blog Düzenleme</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditHeaderModal", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Yazı Başlık")
                        <input type="text" class="form-control" id="Header" name="Header" value="@Model.Header"/>
                    </div>
                    <div>
                        <input type="text" class="form-control" id="HeaderOfTitle" name="HeaderOfTitle" value="@Model.HeaderOfTitle" />
                    </div>
                    <div>
                        <input type="text" name="Id" value="@Model.Id" hidden/>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary">
                        <input type="button"
                               value="Kapat"
                               class="btn btn-danger"
                               data-dismiss="modal"
                               id="close" />
                    </div>

                }
            </div>
        </div>
    </div>
</div>
